all:
  children:
    proxmox:
      hosts:
        proxmox-server:
          ansible_host: 192.168.0.100           # 실제 ProxMox 서버 IP로 변경
          ansible_user: root
          ansible_ssh_pass: "your-password-here" # 실제 root 패스워드로 변경
          ansible_port: 22
          ansible_python_interpreter: /usr/bin/python3
          ansible_become: yes
          ansible_become_method: sudo
          ansible_become_pass: "your-password-here"
          
          # Docker 설정 (선택사항)
          docker_users: ['your-username']       # Docker 그룹에 추가할 사용자들 (예: ['user1', 'user2'])
